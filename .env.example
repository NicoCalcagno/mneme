# =============================================================================
# üß† MNEME - Configuration File
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# üìÅ OBSIDIAN CONFIGURATION
# -----------------------------------------------------------------------------
OBSIDIAN_VAULT_PATH=/path/to/your/obsidian/vault
OBSIDIAN_FILE_EXTENSIONS=.md,.markdown
OBSIDIAN_EXCLUDE_FOLDERS=.obsidian,.trash,templates

# -----------------------------------------------------------------------------
# ü§ñ LLM PROVIDER CONFIGURATION
# -----------------------------------------------------------------------------
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# üîë API KEYS
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here

# -----------------------------------------------------------------------------
# üéØ EMBEDDINGS CONFIGURATION
# -----------------------------------------------------------------------------
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# -----------------------------------------------------------------------------
# üóÑÔ∏è VECTOR STORE CONFIGURATION
# -----------------------------------------------------------------------------
VECTOR_STORE_TYPE=qdrant
VECTOR_STORE_COLLECTION=mneme_knowledge

# Qdrant Cloud (recommended for production)
QDRANT_URL=https://your-cluster-id.region.gcp.cloud.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key

# OR Qdrant Local (for development)
# QDRANT_PATH=./data/qdrant
# Comment out QDRANT_URL and QDRANT_API_KEY if using local

QDRANT_PREFER_GRPC=false

# -----------------------------------------------------------------------------
# ‚úÇÔ∏è CHUNKING CONFIGURATION
# -----------------------------------------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CHUNKING_STRATEGY=recursive

# -----------------------------------------------------------------------------
# üîç RETRIEVAL CONFIGURATION
# -----------------------------------------------------------------------------
RETRIEVAL_TOP_K=5
RETRIEVAL_MIN_SCORE=0.7

# -----------------------------------------------------------------------------
# üí¨ AGENT CONFIGURATION
# -----------------------------------------------------------------------------
MAX_CONVERSATION_HISTORY=10
ENABLE_CITATIONS=true
CITATION_FORMAT=inline

# -----------------------------------------------------------------------------
# üåê API SERVER CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
CORS_ORIGINS=*
API_PREFIX=/api/v1
ENABLE_DOCS=true

# -----------------------------------------------------------------------------
# üìä OBSERVABILITY
# -----------------------------------------------------------------------------
ENABLE_TRACING=false
LOG_LEVEL=INFO
LOG_FILE=./data/logs/mneme.log

# -----------------------------------------------------------------------------
# üîÑ INGESTION CONFIGURATION
# -----------------------------------------------------------------------------
INCREMENTAL_INGESTION=true
CHECKSUM_ALGORITHM=md5
INGESTION_DB_PATH=./data/ingestion.db
MAX_FILE_SIZE_MB=10
INGESTION_WORKERS=4

# -----------------------------------------------------------------------------
# üß™ DEVELOPMENT & TESTING
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# End of configuration
# =============================================================================